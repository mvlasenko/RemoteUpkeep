@{
    object ModelValue;
    if (ViewData.TemplateInfo.FormattedModelValue == ViewData.ModelMetadata.Model)
    {
        ModelValue = String.Format(System.Globalization.CultureInfo.CurrentCulture,
                                "{0:0.00}", ViewData.ModelMetadata.Model);
    }
    else
    {
        ModelValue = ViewData.TemplateInfo.FormattedModelValue;
    }

    var htmlAttributes = HtmlHelper.AnonymousObjectToHtmlAttributes(ViewData["htmlAttributes"]);
    htmlAttributes["placeholder"] = ViewData.ModelMetadata.DisplayName;
}

@Html.TextBox("", ModelValue, htmlAttributes)