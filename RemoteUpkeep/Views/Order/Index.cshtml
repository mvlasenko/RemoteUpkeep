@model RemoteUpkeep.ViewModels.OrderViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Please select an option";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("StepOne", "Order", FormMethod.Post, new { @class = "form-horizontal", role = "form", @id = "frmOrder" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.EditorFor(model => model.ServiceId, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Next" class="btn btn-default" />
        </div>
    </div>
}