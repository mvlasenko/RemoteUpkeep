@using RemoteUpkeep.Properties
@using RemoteUpkeep.Helpers
@model IEnumerable<RemoteUpkeep.Models.Target>
@{
    ViewBag.Title = Resources.Targets;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Resources.Targets</h2>

<p>
    @Html.ActionLink(Resources.CreateNew, "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RegionId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Geography)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ChangedByUserId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ChangedDateTime)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Region.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @item.Description.Cut(50)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Geography)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChangedBy.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChangedDateTime)
            </td>
            <td>
                @Html.ActionLink(Resources.Edit, "Edit", new { id = item.Id }) |
                @Html.ActionLink(Resources.Delete, "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
