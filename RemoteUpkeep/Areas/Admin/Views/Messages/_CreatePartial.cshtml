@using RemoteUpkeep.Properties
@model RemoteUpkeep.Models.Message

@using (Ajax.BeginForm("CreatePartial", null,
    new AjaxOptions
    {
        InsertionMode = InsertionMode.Replace,
        HttpMethod = "POST",
        UpdateTargetId = "modal-content",
        OnSuccess = "RefreshMessages(" + Model.OrderDetailsId + ");"
    },
    new { @id = "frmModal" }))
{
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">@Resources.Create</h4>
    </div>

    <div class="modal-body">

        @Html.HiddenFor(model => model.Date)
        @Html.HiddenFor(model => model.SenderId)
        @Html.HiddenFor(model => model.OrderDetailsId)

        <div class="form-group">
            @Html.LabelFor(model => model.ReceiverId, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.EditorFor(model => model.ReceiverId, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ReceiverId, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Text, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.EditorFor(model => model.Text, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MessageType, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.EnumDropDownListFor(model => model.MessageType, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.MessageType, "", new { @class = "text-danger" })
        </div>

    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-primary" onclick="if ($('#frmModal').valid()) { $('#modal').modal('hide'); }">@Resources.Save</button>
        <button type="button" class="btn btn-default" data-dismiss="modal">@Resources.Close</button>
    </div>
}