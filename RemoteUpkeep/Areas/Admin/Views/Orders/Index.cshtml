@using RemoteUpkeep.Properties
@model IEnumerable<RemoteUpkeep.Models.Order>
@{
    ViewBag.Title = Resources.Orders;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Resources.Orders</h2>

<p>
    @Html.ActionLink(Resources.CreateNew, "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(m => m.UserId)
        </th>
        <th>
            @Html.DisplayNameFor(m => m.CreatedDateTime)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.User.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDateTime)
            </td>
            <td>
                @Html.ActionLink(Resources.Edit, "Edit", new { id = item.Id }) |
                @Html.ActionLink(Resources.Delete, "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>