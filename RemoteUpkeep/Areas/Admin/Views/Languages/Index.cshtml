@using RemoteUpkeep.Properties
@model IEnumerable<RemoteUpkeep.Models.Language>

@{
    ViewBag.Title = Resources.Languages;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Resources.Languages</h2>

<p>
    @Html.ActionLink(Resources.CreateNew, "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(m => m.Title)
        </th>
        <th>
            @Html.DisplayNameFor(m => m.Code)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.ActionLink(Resources.Edit, "Edit", new { id = item.Id }) |
                @Html.ActionLink(Resources.Delete, "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
